  "repository": {
    "type": "git",
    "url": "https://github.com/natura-cosmeticos/natds.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --strict",
    "build": "lerna run build",
    "clean": "lerna clean",
    "cm": "git cz",
    "commit": "git cz",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx --cache --max-warnings 0",
    "format": "yarn lint --fix",
    "format:staged": "yarn lint:staged --fix",
    "lerna": "lerna",
    "lerna:prerelease:version": "lerna version --conventional-commits --conventional-prerelease --no-changelog",
    "lerna:prerelease:version:ci": "yarn lerna:prerelease:version --force-git-tag --force-publish=@naturacosmeticos/natds-styles,@naturacosmeticos/natds-web --yes",
    "lerna:prerelease:publish": "lerna publish from-git --canary --ignore-prepublish",
    "lerna:prerelease:publish:ci": "yarn lerna:prerelease:publish --yes",
    "lerna:release:version": "lerna version --allow-branch main --conventional-commits",
    "lerna:release:version:ci": "yarn lerna:release:version --create-release github --force-publish=@naturacosmeticos/natds-styles,@naturacosmeticos/natds-web --yes",
    "lerna:release:publish": "lerna publish from-git --dist-tag latest --ignore-prepublish",
    "lerna:release:publish:ci": "yarn lerna:release:publish --yes",
    "lerna:graduate:version": "lerna version --conventional-commits --conventional-graduate",
    "lerna:graduate:version:ci": "yarn lerna:graduate:version --force-publish=@naturacosmeticos/natds-styles,@naturacosmeticos/natds-web --yes",
    "lint": "yarn eslint",
    "lint:staged": "yarn eslint $(git diff --name-only --diff-filter=ACM \"*.js\" \"*.jsx\" \"*.ts\" \"*.tsx\" | sed 's| |\\\\ |g')",
    "prebuild": "yarn lint",
    "prepare": "BUILD=production yarn test",
    "pretest": "yarn build",
    "reinstall": "yarn clean && rm -rf node_modules && rm -rf yarn.lock",
    "release:local": "yarn build && lerna publish --no-push --registry http://localhost:4873",
    "release:local:revert": "git reset --hard HEAD~1 && git tag | xargs git tag -d",
    "stryker:run": "stryker run",
    "test": "jest && lerna run test:ci --stream",
    "test:ci": "lerna run test:ci",
    "version": "echo $npm_package_version",
    "watch": "concurrently \"cd packages/styles && yarn watch\" \"cd packages/web && yarn watch\""
  },
  "workspaces": {
    "packages": [
      "examples/cdn",
      "examples/create-react-app",
      "examples/create-react-app-with-typescript",
      "examples/gatsby",
      "examples/mdx-deck",
      "examples/single-spa/root",
      "packages/styles",
      "packages/web"
    ],
    "nohoist": [
      "**/create-react-class",
      "**/create-react-class/**",
      "**/@date-io/fns",
      "**/@date-io/fns/**",
      "**/@material-ui/pickers",
      "**/@material-ui/pickers/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@naturacosmeticos/eslint-config-natura": "2.0.2",
    "@storybook/addon-storyshots": "6.0.26",
    "@stryker-mutator/core": "3.3.1",
    "@stryker-mutator/javascript-mutator": "3.3.1",
    "@stryker-mutator/jest-runner": "3.3.1",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "alex": "9.0.1",
    "commitizen": "4.2.2",
    "concurrently": "5.3.0",
    "cz-lerna-changelog": "2.0.3",
    "eslint": "7.12.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-mocha": "8.0.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "lerna": "3.22.1",
    "shelljs": "0.8.4",
    "typescript": "4.0.5",
    "yarn": "1.22.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format:staged",
      "pre-push": "yarn test"
    }
  },
  "resolutions": {
    "dot-prop": "^5.2.0",
    "node-forge": "^0.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "@types/react": "16.9.55"
  }
}
