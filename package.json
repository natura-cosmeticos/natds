{
  "name": "natds",
  "displayName": "NatDS Root",
  "private": true,
  "description": "Natura Design System - A collection of components used by Natura Cosmeticos",
  "license": "ISC",
  "keywords": [
    "Design System",
    "design-system",
    "Natura",
    "Natura Design System"
  ],
  "author": "Natura Cosméticos <designsystem@natura.net>",
  "contributors": [
    "Vicente Lyrio <vicente.lyrio@vizir.com.br>",
    "Vagner Saraiva <vagner@vizir.com.br>",
    "Matheus Robert Lichtnow <matheus@vizir.com.br>",
    "Daniel Castro <daniel.castro@vizir.com.br>",
    "Vinícius Ponciano <vinicius.ponciano@thoughtworks.com>"
  ],
  "homepage": "https://github.com/natura-cosmeticos/natds",
  "repository": {
    "type": "git",
    "url": "https://github.com/natura-cosmeticos/natds.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:docs:prerelease": "bash scripts/build-storybook-release.sh",
    "build:libs": "lerna run build --ignore @naturacosmeticos/natds-docs",
    "clean": "lerna clean",
    "cm": "git cz",
    "commit": "git cz",
    "eslint": "eslint",
    "format": "yarn lint --fix",
    "format:staged": "yarn lint:staged --fix",
    "lerna": "lerna",
    "lerna:prerelease:version": "lerna version --conventional-commits --conventional-prerelease --no-changelog",
    "lerna:prerelease:version:ci": "yarn lerna:prerelease:version --force-publish --yes",
    "lerna:prerelease:publish": "lerna publish from-git --ignore-prepublish",
    "lerna:prerelease:publish:ci": "yarn lerna:prerelease:publish --yes",
    "lerna:release:version": "lerna version --allow-branch master --conventional-commits",
    "lerna:release:version:ci": "yarn lerna:release:version --create-release github --yes",
    "lerna:release:publish": "lerna publish from-git --dist-tag latest --ignore-prepublish",
    "lerna:release:publish:ci": "yarn lerna:release:publish --yes",
    "lerna:graduate:version": "lerna version --conventional-commits --conventional-graduate",
    "lerna:graduate:version:ci": "yarn lerna:graduate:version --force-publish --yes",
    "lint": "yarn eslint .",
    "lint:staged": "yarn eslint $(git diff --name-only --diff-filter=ACM \"*.js\" \"*.jsx\" \"*.ts\" \"*.tsx\" | sed 's| |\\\\ |g')",
    "prebuild": "yarn lint",
    "prepare": "BUILD=production yarn test",
    "pretest": "yarn build:libs",
    "release:local": "yarn build && lerna publish --no-push --registry http://localhost:4873",
    "release:local:revert": "git reset --hard HEAD~1 && git tag | xargs git tag -d",
    "stryker:run": "stryker run",
    "test": "lerna run test:ci --stream",
    "test:ci": "lerna run test:ci --ignore @naturacosmeticos/natds-docs --ignore @naturacosmeticos/natds-icons",
    "version": "echo $npm_package_version",
    "watch": "concurrently \"cd packages/styles && yarn watch\" \"cd packages/web && yarn watch\""
  },
  "workspaces": {
    "packages": [
      "packages/docs",
      "packages/icons",
      "packages/styles",
      "packages/web"
    ],
    "nohoist": [
      "**/create-react-class",
      "**/create-react-class/**",
      "**/@date-io/fns",
      "**/@date-io/fns/**",
      "**/@material-ui/pickers",
      "**/@material-ui/pickers/**",
      "**/react",
      "**/react/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@naturacosmeticos/eslint-config-natura": "^2.0.2",
    "@stryker-mutator/core": "3.3.1",
    "@stryker-mutator/javascript-mutator": "3.3.1",
    "@stryker-mutator/jest-runner": "3.3.1",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.6.1",
    "commitizen": "4.1.2",
    "concurrently": "5.2.0",
    "cz-lerna-changelog": "2.0.3",
    "eslint": "7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "7.20.3",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lerna": "3.22.1",
    "netlify": "4.3.5",
    "shelljs": "0.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "glob": "7.1.6"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format:staged",
      "pre-push": "yarn format && yarn test"
    }
  }
}
